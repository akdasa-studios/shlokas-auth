{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "files.exclude": {
    "**/.git": true,
    "node_modules/": true,
  },
  /* -------------------------------------------------------------------------- */
  /*                                   linter                                   */
  /* -------------------------------------------------------------------------- */
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  /* -------------------------------------------------------------------------- */
  /*                                    tests                                   */
  /* -------------------------------------------------------------------------- */
  "jest.jestCommandLine": "npx jest",
  "jest.autoRun": "onSave",
}